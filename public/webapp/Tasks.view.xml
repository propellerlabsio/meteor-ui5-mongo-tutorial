<mvc:View controllerName="webapp.Tasks"
				height="100%"
				xmlns:mvc="sap.ui.core.mvc"
				xmlns="sap.m">
	<Page title="Todo List"
					class="sapUiResponsiveContentPadding">
		<content>
			<List items="{/Tasks}">
				<StandardListItem title="{text}" />
			</List>
		</content>
	</Page>
</mvc:View>
