<mvc:View controllerName="webapp.Tasks"
				height="100%"
				xmlns:mvc="sap.ui.core.mvc"
				xmlns:l="sap.ui.layout"
				xmlns="sap.m">

	<!-- Page for heading and content padding-->
	<Page title="Todo List"
					class="sapUiResponsiveContentPadding">
		<content>
			<!-- Grid for responsive layout on different devices -->
			<l:Grid defaultSpan="XL8 L8 M8 S12"
							defaultIndent="XL2 L2 M2 S0">

				<!-- Tasks list -->
				<List items="{
					path: '/Tasks',
					sorter: {
						path: 'createdAt',
						descending: true
					}}"
					mode="MultiSelect"
					selectionChange="onSelectionChange">

					<!-- List toolbar -->
					<headerToolbar>
						<Toolbar>
							<Label text="Add:" />
							<Input change="onAddTask" placeholder="Task text" />
						</Toolbar>
					</headerToolbar>

					<!-- Task list item -->
					<CustomListItem
						selected="{checked}">
						<FormattedText htmlText="{=
							${checked}
							? '&lt;span class=&quot;completedTask&quot;&gt;' + ${text} + '&lt;/span&gt;'
							: ${text}
							}"/>
					</CustomListItem>
				</List>
			</l:Grid>
		</content>
	</Page>
</mvc:View>
